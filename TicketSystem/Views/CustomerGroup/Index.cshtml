@model TicketSystem.ViewModel.CustomerGroupVm
@{
    Layout = "Layout";
    int n = 1;
}

<nav class="navbar navbar-expand-sm bg-light ">
   <div class="container">Customer Group Info</div>
    <div class="container-fluid justify-content-end">
        <!-- Links -->
        <ul class="navbar-nav">
            <li class="nav-item me-1">
                <a class="nav-link text-white b1" asp-controller="CustomerGroup" asp-action="Create">Create</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-white b1" asp-controller="CustomerGroup" asp-action="Index">All List</a>
            </li>

        </ul>
    </div>

</nav>

<div class="container mt-3">
   
    <table class="table table-bordered table-light rounded-2 col-6" id="datatablesSimple">
        <thead>
            <tr>
                <th>Sn</th>
                <th width="20%">Group Name</th>
                <th width="40%">Description</th>
                <th width="30%">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var items in Model.customerGroups)
            {
            <tr>
                <td>@n</td>
                <td>@items.Name</td>
                <td>@items.Description</td>
                <td>
                        <a class="btn btn-primary btn-sm" asp-action="Edit" asp-controller="CustomerGroup" asp-route-id="@items.Id"><i class="fa-solid fa-pen-to-square"></i>Update</a>
                        <a class="btn btn-danger btn-sm" asp-action="Delete" asp-controller="CustomerGroup" asp-route-id="@items.Id"><i class="fa-solid fa-trash"></i> Delete</a>
                </td>
                 @{
                    n++;
                }

            </tr>
               
            }
        </tbody>
    </table>
</div>
