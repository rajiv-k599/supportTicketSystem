@model TicketSystem.ViewModel.CustomerVm
@{
    int n = 1;
    Layout = "Layout";
}
<link href="~/lib/DataTables/datatables.min.css" rel="stylesheet" asp-append-version="true" />
<nav class="navbar navbar-expand-sm bg-light ">
    <div class="container">Customer Info</div>
    <div class="container-fluid justify-content-end">
        <!-- Links -->
        <ul class="navbar-nav">
            <li class="nav-item me-1">
                <a class="nav-link text-white b1" asp-controller="Customer" asp-action="Create">Create</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-white b1" asp-controller="Customer" asp-action="Index">All List</a>
            </li>

        </ul>
    </div>

</nav>

<div class="container-fluid">
    <div class="align-items-center justify-content-center mt-3 ms-1 me-1 bg-light rounded p-2">
    <table class="table table-striped table-light" id="myTable" style="width:100%">
        <thead>
            <tr>
                <th>Sn</th>
                <th>Customer Group</th>
                <th>Name</th>
                <th>Email</th>
                <th>Phone No</th>
                <th>Pan No</th>

                <th width="20%">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var items in Model.Customers)
            {
                <tr>
                    <td>@n</td>
                    <td>@items.CustomerGroup.Name</td>
                    <td>@items.Name</td>
                    <td>@items.Email</td>
                    <td>@items.Phone</td>
                    <td>@items.Pan</td>
                    <td>
                        <a class="btn btn-primary btn-sm" asp-action="Edit" asp-controller="Customer" asp-route-id="@items.Id"><i class="fa-solid fa-pen-to-square"></i> Update</a>
                        <a class="btn btn-warning btn-sm" asp-action="Details" asp-controller="Customer" asp-route-id="@items.Id"><i class="fa-sharp fa-regular fa-eye"></i> View</a>
                        <a class="btn btn-danger btn-sm" asp-action="Delete" asp-controller="Customer" asp-route-id="@items.Id"><i class="fa-solid fa-trash"></i> Delete</a>
                    </td>
                    @{
                        n++;
                    }

                </tr>

            }
        </tbody>
    </table>
</div>
</div>
<script>
    $(document).ready(function () {
        $('#myTable').DataTable();
    });
</script>
